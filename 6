import java.util.ArrayList;
public class ClassesAndMethods {


    public static void main(String[] args) {
        Ogrenci ogrenci1 = new Ogrenci();

        ArrayList<Ders> dersler = new ArrayList<>();
        dersler.add(new Ders("OOP",2,"Ahmet"));
        dersler.add(new Ders("Fizik",1,"Ali"));

        Ogrenci ogrenci2 = new Ogrenci("Arda",dersler);


        Ogrenci ogrenci3 = new Ogrenci("Kocak",3 ,dersler );
    }
}

public class Ders {
    private String ad;
    private int sinif;
    private String hoca;
    private static int derssayisi = 0;

    public Ders(String ad, int sinif, String hoca) {
        this.ad = ad;
        this.sinif = sinif;
        this.hoca = hoca;
        derssayisi++;
    }



    public String getAd() {
        return ad;
    }

    public void setAd(String ad) {
        this.ad = ad;
    }

    public int getSinif() {
        return sinif;
    }

    public void setSinif(int sinif) {
        this.sinif = sinif;
    }

    public String getHoca() {
        return hoca;
    }

    public void setHoca(String hoca) {
        this.hoca = hoca;
    }


    public static int getDerssayisi() {
        return derssayisi;
    }


    public static void setDerssayisi(int derssayisi) {
        Ders.derssayisi = derssayisi;
    }


    public void dersBilgisiYaz(){

        System.out.println(getAd()+" "+getHoca()+" "+getSinif());

    }
}

import java.util.ArrayList;
public class Ogrenci {

    private String ad;
    private int sinif;
    private ArrayList<Ders> derslistesi;
    private static int ogrencisayisi = 0;

    public Ogrenci(){

        ogrencisayisi++;
        this.ad = "";
        this.sinif = 0;
        this.derslistesi = null;
        ogrencibilgiyaz();

    }

    public Ogrenci(String ad,ArrayList<Ders> derslistesi){
        this.ad = ad;
        this.sinif = 0;
        this.derslistesi = derslistesi;
        ogrencisayisi++;

        ogrencibilgiyaz();


    }public Ogrenci(String ad, int sinif, ArrayList<Ders> derslistesi) {
        this.ad = ad;
        this.sinif = sinif;
        this.derslistesi = derslistesi;
        ogrencisayisi++;
        ogrencibilgiyaz();
    }


    public String getAd() {
        return ad;
    }


    public void setAd(String ad) {
        this.ad = ad;
    }


    public int getSinif() {
        return sinif;
    }


    public void setSinif(int sinif) {
        this.sinif = sinif;
    }


    public ArrayList<Ders> getDerslistesi() {
        return derslistesi;
    }


    public void setDerslistesi(ArrayList<Ders> derslistesi) {
        this.derslistesi = derslistesi;
    }


    public static int getOgrencisayisi() {
        return ogrencisayisi;
    }

    public void ogrencidersbilgileriyaz(){

        if (derslistesi != null) {
            for (Ders ders : derslistesi) {
                ders.dersBilgisiYaz();
            }


        }


    }


    public void ogrencibilgiyaz(){

        System.out.println("Ad: "+this.ad);
        System.out.println("Sinif: "+this.sinif);
        System.out.println("Ogrenci Sayisi: "+ogrencisayisi);


        if (derslistesi != null) {
            for (Ders ders : derslistesi) {
                System.out.println(ders.getAd()+" "+ders.getHoca()+" "+ders.getSinif());
            }


        }

    }
}
